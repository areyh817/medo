<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#5A8846">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="#fff"
        android:textSize="20dp"
        android:fontFamily="@font/nanumr"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금 로그인을 하여 우리 지구를 함께 지켜요 !"
        android:textColor="#fff"
        android:textSize="12dp"
        android:fontFamily="@font/nanumr"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <!--로그인 입력창-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_round_gray"
            android:layout_marginTop="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in Account"
            android:textSize="17dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:fontFamily="@font/nanumr"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="39dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to continue"
            android:textColor="#818181"
            android:textSize="12dp"
            android:layout_marginTop="205dp"
            android:layout_marginLeft="38dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="265dp"
            android:fontFamily="@font/nanumr"
            android:text="아이디"
            android:textColor="#000"
            android:textSize="13dp" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="290dp"
            android:background="@drawable/edit_rectangle"
            android:textColor="#818181"
            android:textSize="12.5dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/nanumr"
            android:id="@+id/edtID"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="13dp"
            android:fontFamily="@font/nanumr"
            android:textColor="#000"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="45dp"/>
        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="395dp"
            android:background="@drawable/edit_rectangle"
            android:textColor="#818181"
            android:textSize="12.5dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:id="@+id/edtPW"/>
        <Button
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:background="@drawable/login_round_green"
            android:layout_marginTop="200dp"
            android:layout_gravity="center"
            android:text="Sign in"
            android:textColor="#fff"
            android:fontFamily="@font/nanumr"
            android:id="@+id/loginBtn"
            style="?android:attr/borderlessButtonStyle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요 ?  회원가입"
            android:textSize="12dp"
            android:textColor="#818181"
            android:layout_marginTop="560dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/loginJoin"/>
    </FrameLayout>



</LinearLayout>